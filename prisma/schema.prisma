// Prisma 数据模型定义
// - 使用 PostgreSQL 作为数据库
// - 兼容 next-auth 的 PrismaAdapter 默认表结构（User/Account/Session/VerificationToken）
// - 额外增加 `passwordHash` 字段，用于“账号密码”注册/登录（Credentials Provider）

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  /// 主键：next-auth 推荐使用字符串 ID（cuid）
  id            String    @id @default(cuid())
  name          String?
  /// 邮箱（账号密码登录会用到）；OAuth 登录也会写入 email
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  /// 本项目扩展字段：密码哈希（OAuth 用户可为空）
  passwordHash  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]

  /// 用户关联的 LLM 会话（可选）
  /// - 目前接口未强制鉴权；未来若绑定用户，可通过该关系查询历史会话
  conversations Conversation[]
}

model Account {
  /// 主键：使用 cuid，便于跨数据库兼容
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/// LLM 会话（Conversation）
/// - 用于持久化保存“与大语言模型的对话记录”
/// - 目前主要服务于 `/api/llm/grok`（Grok/xAI）接口
model Conversation {
  /// 主键：使用字符串，兼容现有前端传入的 conversationId（通常为 UUID）
  id String @id

  /// 可选：关联登录用户
  /// - 如果接口未来加鉴权/绑定用户，可写入 userId
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  /// 系统提示词（system prompt）
  /// - 设计上每个会话固定一份，便于回放/审计
  systemPrompt String @db.Text

  /// 最近一次调用使用的模型名（可选）
  model String?
  /// 最近一次调用使用的温度（可选）
  temperature Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages ConversationMessage[]

  @@index([userId])
  @@index([updatedAt])
}

/// 会话消息角色（与 OpenAI ChatCompletion 的 role 对齐）
enum ConversationMessageRole {
  SYSTEM
  USER
  ASSISTANT
  TOOL
}

/// LLM 会话消息（ConversationMessage）
/// - 仅存储 role + content（最小可用集合）
/// - 需要扩展 usage/finish_reason 等元信息时，可再加 JSON 字段
model ConversationMessage {
  /// 主键：cuid 便于跨数据库兼容
  id String @id @default(cuid())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  role    ConversationMessageRole
  content String @db.Text

  createdAt DateTime @default(now())

  @@index([conversationId])
  @@index([conversationId, createdAt])
}
